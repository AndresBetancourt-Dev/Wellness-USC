@model IEnumerable<Wellness_USC.Models.Registro>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                    @Html.Raw(TempData["notification"])
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clase.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegistroId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RegistroId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegistroId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
