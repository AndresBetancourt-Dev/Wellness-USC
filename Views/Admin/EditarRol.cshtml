@model Wellness_USC.ViewModels.EditRolViewModel

@{
    ViewData["Title"] = "Editar Rol";
}


<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-block btn-primary font-poppins">Editar</button>
    <a asp-action="Roles" class="btn btn-danger">Cancelar</a>
</form>

<div class="card">
    <div class="card-header">
        <h2>Usuarios en este Rol</h2>
    </div>
    <div class="card-body">
        @if(Model.Users.Any()){
            @foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }else{
            <h4>No hay usuarios en este rol</h4>
        }

    </div>
    <div class="card-footer">
        <a asp-action="EditarRolesUsuarios" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-primary">Editar Roles de Usuarios</a>
    </div>
</div>